{
    "name": "morningtrain/wp-blocks",
    "description": "A package for loading WordPress blocks with support for Blade templates",
    "keywords": [
        "wordpress",
        "morningtrain",
        "gutenberg",
        "blocks"
    ],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Morningtrain",
            "email": "mh@morningtrain.dk"
        }
    ],
    "autoload": {
        "psr-4": {
            "Morningtrain\\WP\\Blocks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Morningtrain\\WP\\Hooks\\Tests\\Unit\\": "tests/Unit"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/WordPress/wordpress-develop"
        }
    ],
    "require": {
        "php": "^8.0",
        "morningtrain/php-loader": "^0.3.2"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "brain/monkey": "^2.6",
        "aaemnnosttv/wp-sqlite-db": "^1.2",
        "koodimonni/composer-dropin-installer": "^1.4",
        "mnsami/composer-custom-directory-installer": "^2.0",
        "php-stubs/wordpress-stubs": "^5.9",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "wordpress/wordpress": "^5.9",
        "yoast/phpunit-polyfills": "^1.0",
        "yoast/wp-test-utils": "^1.0"
    },
    "extra": {
        "installer-paths": {
            "./wp/": [
                "wordpress/wordpress"
            ]
        },
        "dropin-paths": {
            "wp/src/wp-content/": [
                "package:aaemnnosttv/wp-sqlite-db:src/db.php"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --group=unit",
        "test-integration": "vendor/bin/pest --group=integration",
        "test-coverage": "vendor/bin/pest  --group=unit --coverage"
    },
    "suggest": {
        "morningtrain/wp-view": "Allows rendering Blade Views as block templates"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "composer/installers": true,
            "koodimonni/composer-dropin-installer": true,
            "mnsami/composer-custom-directory-installer": true
        }
    },
    "prefer-stable": true
}
