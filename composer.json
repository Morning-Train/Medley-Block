{
    "name": "morningmedley/block",
    "description": "A package for loading WordPress blocks with support for Blade templates",
    "keywords": [
        "wordpress",
        "morningtrain",
        "gutenberg",
        "blocks"
    ],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Morningtrain",
            "email": "mh@morningtrain.dk"
        }
    ],
    "autoload": {
        "psr-4": {
            "MorningMedley\\Block\\": "src/"
        }
    },
    "require": {
        "php": "^8.0",
        "illuminate/container": "^8|^9",
        "illuminate/support": "^8|^9",
        "symfony/cache": "^v6.3.4",
        "symfony/finder": "^v6.3"
    },
    "require-dev": {
        "brain/monkey": "^2.6",
        "dingo-d/wp-pest": "^1.6.1",
        "illuminate/view": "^9|^10"
    },
    "scripts": {
        "test": "vendor/bin/pest --group=unit",
        "test-coverage": "vendor/bin/pest  --group=unit --coverage"
    },
    "suggest": {
        "morningmedley/view": "Allows rendering Blade Views as block templates"
    },
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "pestphp/pest-plugin": true,
            "koodimonni/composer-dropin-installer": true,
            "mnsami/composer-custom-directory-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MorningMedley\\Block\\ServiceProvider"
            ]
        }
    }
}
