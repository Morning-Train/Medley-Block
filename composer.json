{
    "name": "morningtrain/wp-blocks",
    "description": "A package for loading WordPress blocks with support for Blade templates",
    "keywords": [
        "wordpress",
        "morningtrain",
        "gutenberg",
        "blocks"
    ],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Morningtrain",
            "email": "mh@morningtrain.dk"
        }
    ],
    "autoload": {
        "psr-4": {
            "Morningtrain\\WP\\Facades\\": "facades/",
            "Morningtrain\\WP\\Blocks\\": "src/"
        }
    },
    "require": {
        "php": "^8.0",
        "morningtrain/php-loader": "^0.3.2",
        "illuminate/container": "^8|^9",
        "illuminate/support": "^8|^9",
        "symfony/cache": "^v6.3.4"
    },
    "require-dev": {
        "brain/monkey": "^2.6",
        "dingo-d/wp-pest-integration-test-setup": "^1.6"
    },
    "scripts": {
        "setup-test": [
            "vendor/bin/wp-pest setup theme"
        ],
        "test": "vendor/bin/pest --group=unit",
        "test-integration": [
            "cp -r tests/_files/blocks wp/src/wp-content",
            "vendor/bin/pest --group=integration"
        ],
        "test-coverage": "vendor/bin/pest  --group=unit --coverage"
    },
    "suggest": {
        "morningtrain/wp-view": "Allows rendering Blade Views as block templates"
    },
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "pestphp/pest-plugin": true,
            "koodimonni/composer-dropin-installer": true,
            "mnsami/composer-custom-directory-installer": true
        }
    },
    "extra": {
        "foo": 4,
        "laravel": {
            "providers": [
                "Morningtrain\\WP\\Blocks\\ServiceProvider"
            ]
        }
    }
}
